pipeline {
  agent any
  stages {
    stage("Clone repository") {
      steps {
        sh 'if [ -d "CI-Pipeline" ]; then rm -Rf CI-Pipeline; fi'
        sh "git clone https://github.com/MP-Prime/CI-Pipeline"
      }
    }  
    stage("Test frontend") {
      steps {
        sh "sudo apt update"
        sh  "sudo apt install -y python3-pip"
        sh "ls -la"
        sh "cd CI-Pipeline/frontend/tests && pytest && pytest --cov application"
      }
    }  
    stage("Upload to Docker") {
      steps {
        sh "cd CI-Pipeline/Jenkins_frontend && sh push_fe.sh"
      }
    }
    stage("Get from Docker") {
      steps {
        sh "cd CI-Pipeline/Jenkins_frontend && sh pull_fe.sh"
      }
    }  
    stage("Deploy in Kubernetes") {
      steps {
        sh "cd CI-Pipeline/Jenkins_frontend && sh deploy_fe.sh"
      }
    }
  }
}